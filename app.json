{
  "expo": {
    "name": "Nutri8",
    "slug": "nutri8",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "nutri8",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#4CAF50"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nutri8.app",
      "buildNumber": "1"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4CAF50"
      },
      "package": "com.nutri8.app",
      "versionCode": 1,
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "name": "Nutri8",
      "shortName": "Nutri8",
      "lang": "ko",
      "scope": "/",
      "themeColor": "#4CAF50",
      "description": "스마트 식단 관리 및 칼로리 추적 앱",
      "dir": "auto",
      "display": "standalone",
      "startUrl": "/",
      "orientation": "portrait",
      "backgroundColor": "#ffffff",
      "preferRelatedApplications": false
    },
    "plugins": [
      "expo-router",
      "expo-sqlite"
    ]
  }
}
